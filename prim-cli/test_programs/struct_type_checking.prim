import std.print.println_i32

struct Point {
    x: i32,
    y: i32
}

struct Person {
    name: str,
    age: i32
}

fn main() {
    // Test basic struct literal type checking
    let p1 = Point { x = 10, y = 20 }
    println_i32(p1.x)
    println_i32(p1.y)
    
    // Test field access type checking
    let p2: Point = Point { x = 5, y = 15 }
    let x_coord = p2.x
    let y_coord = p2.y
    println_i32(x_coord)
    println_i32(y_coord)
    
    // Test struct with different field types
    let person = Person { name = "Alice", age = 30 }
    println_i32(person.age)
}
